<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <Button
        android:id="@+id/button_customer"
        android:layout_width="190dp"
        android:layout_height="72dp"
        android:layout_marginTop="175sp"
        android:backgroundTint="@color/orange"
        android:text="@string/customer"
        android:textColor="@color/grey"
        app:layout_constraintBottom_toTopOf="@+id/button_technician"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_technician"
        android:layout_width="190dp"
        android:layout_height="72dp"
        android:backgroundTint="@color/orange"
        android:text="@string/technician"
        android:textColor="@color/grey"
        app:layout_constraintBottom_toTopOf="@+id/shop_info_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_customer" />

    <Button
        android:id="@+id/shop_info_button"
        android:layout_width="190dp"
        android:layout_height="72dp"
        android:layout_marginBottom="175sp"
        android:backgroundTint="@color/grey"
        android:text="@string/contact_info"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>